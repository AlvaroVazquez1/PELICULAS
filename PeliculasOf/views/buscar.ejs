<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buscar Película</title>
    <!-- Agrega los estilos de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <center><h1>Buscar Película</h1></center>
        <!-- Agregar un formulario para la búsqueda -->
        <form action="/Peliculas/buscar" method="GET" class="mb-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar película por nombre" name="nombrePelicula">
                <button class="btn btn-outline-primary" type="submit">Buscar</button>
            </div>
        </form>

        <!-- Mostrar la película encontrada -->
        <% if (PeliculaEncontrada) { %>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card mb-4 shadow-sm">
                        <img src="<%= PeliculaEncontrada.img %>" class="card-img-top" alt="<%= PeliculaEncontrada.nombre %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= PeliculaEncontrada.nombre %></h5>
                            <p class="card-text">Año: <%= PeliculaEncontrada.año %></p>
                            <p class="card-text">Director: <%= PeliculaEncontrada.director %></p>
                            <p class="card-text">Actores: <%= PeliculaEncontrada.actores.join(', ') %></p>
                        </div>
                        <!-- Agrega un botón para regresar -->
                        <div class="card-footer text-center">
                            <a href="/Peliculas" class="btn btn-primary">Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <!-- Mensaje si la película no se encuentra -->
            <div class="alert alert-danger" role="alert">
                La película no se encontró.
            </div>
            <!-- Agrega un botón para regresar -->
           
        <% } %>
    </div>
    <!-- Agrega los scripts de Bootstrap al final del body para mejorar el rendimiento -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
